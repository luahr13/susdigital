@using projetoTP3_A2.Models.Enum
@model IEnumerable<projetoTP3_A2.Models.Prontuario>

@{
    ViewData["Title"] = "Prontuários do Médico";
}

<style>
    .btn-create {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-create:hover {
            background-color: #118072;
            color: #fff;
        }

    .table-custom thead th {
        background-color: #D0F5F2 !important;
        color: #14A091 !important;
        border-bottom: 2px solid #14A091;
    }

    .table-custom tbody td {
        background-color: #E7FDFB !important;
        color: #273240 !important;
        vertical-align: middle;
    }

    .table-custom tbody tr:hover td {
        background-color: #C4ECE9 !important;
    }

    .btn-action {
        background-color: #14A091;
        color: #fff;
        border: none;
        margin-right: 5px;
    }

        .btn-action:hover {
            background-color: #118072;
            color: #fff;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h2 class="mb-4 text-uppercase fw-bold" style="color:#14A091;">
                @ViewData["Title"]
            </h2>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-action="Create" class="btn btn-create">Criar novo prontuário</a>

                <!-- Filtro de Status -->
                <form method="get" class="d-flex align-items-center">
                    <select name="status" class="form-select me-2" onchange="this.form.submit()">
                        <option value="">-- Todos os status --</option>
                        <option value="Aberto" selected="@(Context.Request.Query["status"] == "Aberto")">Aberto</option>
                        <option value="PendenteExame" selected="@(Context.Request.Query["status"] == "PendenteExame")">Pendente de exame</option>
                        <option value="ExameRecebido" selected="@(Context.Request.Query["status"] == "ExameRecebido")">Exame recebido</option>
                        <option value="Fechado" selected="@(Context.Request.Query["status"] == "Fechado")">Fechado</option>
                        <option value="Reaberto" selected="@(Context.Request.Query["status"] == "Reaberto")">Reaberto</option>
                    </select>
                </form>
            </div>

            <div class="table-responsive shadow-sm rounded">
                <table class="table table-hover table-custom">
                    <thead class="text-center">
                        <tr>
                            <th>Paciente</th>
                            <th>Criado em</th>
                            <th>Observações</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Paciente.Nome</td>
                                <td>@item.CriadoEm.ToString("dd/MM/yyyy")</td>
                                <td>@item.Observacoes</td>
                                <td>
                                    @if (item.Status == ProntuarioStatus.Aberto)
                                    {
                                        <span class="badge bg-warning text-dark">Aberto</span>
                                    }
                                    else if (item.Status == ProntuarioStatus.PendenteExame)
                                    {
                                        <span class="badge bg-info text-dark">Pendente de exame</span>
                                    }
                                    else if (item.Status == ProntuarioStatus.ExameRecebido)
                                    {
                                        <span class="badge bg-primary">Exame recebido</span>
                                    }
                                    else if (item.Status == ProntuarioStatus.Fechado)
                                    {
                                        <span class="badge bg-success">Fechado</span>
                                    }
                                    else if (item.Status == ProntuarioStatus.Reaberto)
                                    {
                                        <span class="badge bg-danger">Reaberto</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status != ProntuarioStatus.Fechado)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-action">Editar</a>
                                    }
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-action">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-action">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>