@using projetoTP3_A2.Models.Enum
@model IEnumerable<projetoTP3_A2.Models.Prontuario>

@{
    ViewData["Title"] = "Reabrir Prontuários";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Título -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-uppercase fw-bold text-primary">
                    <i class="bi bi-arrow-repeat me-2"></i> @ViewData["Title"]
                </h2>
            </div>

            <!-- Tabela -->
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light text-center">
                                <tr>
                                    <th>Paciente</th>
                                    <th>Médico</th>
                                    <th>Criado em</th>
                                    <th>Observações</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Paciente.Nome</td>
                                        <td>@item.Medico.Nome</td>
                                        <td>@item.CriadoEm.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Observacoes</td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">Fechado</span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Reabrir" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-warning d-flex align-items-center justify-content-center">
                                                <i class="bi bi-unlock me-1"></i> Reabrir
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Caso não haja prontuários -->
            @if (!Model.Any())
            {
                <div class="alert alert-info mt-4 text-center">
                    <i class="bi bi-info-circle me-2"></i> Nenhum prontuário fechado encontrado.
                </div>
            }
        </div>
    </div>
</div>