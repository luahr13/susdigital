@model IEnumerable<projetoTP3_A2.Models.Medicamento>
@using projetoTP3_A2.Models.Enum

@{
    ViewData["Title"] = "Medicamentos";
    Layout = "_Layout";
}

<style>
    .btn-edit {
        background-color: #cfe2ff;
        color: #0d6efd;
        border: none;
    }

        .btn-edit:hover {
            background-color: #b6d4fe;
            color: #0a58ca;
        }

    .btn-details {
        background-color: #cff4fc;
        color: #0dcaf0;
        border: none;
    }

        .btn-details:hover {
            background-color: #b6effb;
            color: #0aa2c0;
        }

    .btn-delete {
        background-color: #f8d7da;
        color: #dc3545;
        border: none;
    }

        .btn-delete:hover {
            background-color: #f1b0b7;
            color: #bb2d3b;
        }

    .btn-novo-medicamento {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-novo-medicamento:hover {
            background-color: #118072;
            color: #fff;
        }

    .table-custom thead tr th {
        background-color: #D0F5F2 !important;
        color: #14A091 !important;
    }

    .table-custom tbody tr td {
        background-color: #E7FDFB !important;
        color: #14A091 !important;
    }

    .table-custom tbody tr:hover td {
        background-color: #C4ECE9 !important;
        color: #14A091 !important;
    }
</style>


<div class="container-fluid">
    <div class="row">

        <!-- Sidebar -->
        <div class="col-md-2">
            <partial name="_Sidebar" />
        </div>

        <!-- Conteúdo principal -->
        <div class="col-md-10">
            <h2 class="mb-4" style="color: #14A091;">Medicamentos Cadastrados</h2>

            <div class="d-flex justify-content-end mb-3">
                <a asp-action="Create" class="btn btn-sm btn-novo-medicamento">
                    Novo Medicamento
                </a>
            </div>

            <table class="table table-hover border rounded shadow-sm table-custom">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Dosagem)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Tipo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Frequencia)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Observacoes)</th>
                        <th>Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Dosagem</td>

                            <!-- ENUM APLICADO -->
                            <td>@item.Tipo.ToString()</td>

                            <td>@item.Frequencia</td>
                            <td>@item.Observacoes</td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-edit me-1">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-details me-1">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-delete">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
