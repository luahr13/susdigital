@model projetoTP3_A2.Models.Medicamento

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem certeza que deseja excluir?</h3>

<div>
    <h4>Medicamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dosagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dosagem)
        </dd>

        <!-- Tipo (Enum exibido corretamente) -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Model.Tipo.ToString()
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Frequencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Frequencia)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
