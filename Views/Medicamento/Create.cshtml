@model projetoTP3_A2.Models.Medicamento
@using projetoTP3_A2.Models.Enum

@{
    ViewData["Title"] = "Novo Medicamento";
}

<div class="container-fluid">
    <div class="row">
        <!-- Conteúdo principal -->
        <div class="col-md-10">
            <h2 class="mb-4" style="color:#14A091;">Novo Medicamento</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome do Medicamento</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Dosagem -->
                        <div class="mb-3">
                            <label asp-for="Dosagem" class="form-label">Dosagem</label>
                            <input asp-for="Dosagem" class="form-control" />
                            <span asp-validation-for="Dosagem" class="text-danger"></span>
                        </div>

                        <!-- Tipo (ENUM) -->
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo</label>

                            <select asp-for="Tipo" class="form-control"
                                    asp-items="Html.GetEnumSelectList<TipoMedicamento>()">
                                <option value="">Selecione...</option>
                            </select>

                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <!-- Frequência -->
                        <div class="mb-3">
                            <label asp-for="Frequencia" class="form-label">Frequência</label>
                            <input asp-for="Frequencia" class="form-control" />
                            <span asp-validation-for="Frequencia" class="text-danger"></span>
                        </div>

                        <!-- Observações -->
                        <div class="mb-3">
                            <label asp-for="Observacoes" class="form-label">Observações</label>
                            <textarea asp-for="Observacoes" class="form-control"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Voltar
                            </a>

                            <button type="submit" class="btn" style="background-color:#14A091;color:white;">
                                Salvar
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
