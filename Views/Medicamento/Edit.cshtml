@model projetoTP3_A2.Models.Medicamento
@using projetoTP3_A2.Models.Enum

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Medicamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Nome -->
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Dosagem -->
            <div class="form-group">
                <label asp-for="Dosagem" class="control-label"></label>
                <input asp-for="Dosagem" class="form-control" />
                <span asp-validation-for="Dosagem" class="text-danger"></span>
            </div>

            <!-- Tipo (ENUM aplicado) -->
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>

                <select asp-for="Tipo" class="form-control"
                        asp-items="Html.GetEnumSelectList<TipoMedicamento>()">
                    <option value="">Selecione...</option>
                </select>

                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <!-- Frequência -->
            <div class="form-group">
                <label asp-for="Frequencia" class="control-label"></label>
                <input asp-for="Frequencia" class="form-control" />
                <span asp-validation-for="Frequencia" class="text-danger"></span>
            </div>

            <!-- Observações -->
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
