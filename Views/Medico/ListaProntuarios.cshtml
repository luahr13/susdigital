@model IEnumerable<projetoTP3_A2.Models.Prontuario>

@{
    ViewData["Title"] = "Prontuários";
}

<style>
    .table-custom thead th {
        background-color: #D0F5F2 !important;
        color: #14A091 !important;
        border-bottom: 2px solid #14A091;
    }

    .table-custom tbody td {
        background-color: #E7FDFB !important;
        color: #273240 !important;
        vertical-align: middle;
    }

    .table-custom tbody tr:hover td {
        background-color: #C4ECE9 !important;
    }

    .btn-details {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-details:hover {
            background-color: #118072;
            color: #fff;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h2 class="mb-4 text-uppercase fw-bold" style="color:#14A091;">
                Prontuários de @ViewBag.PacienteNome
            </h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    Nenhum prontuário encontrado para este paciente.
                </div>

                <a asp-controller="Prontuario" asp-action="Create" asp-route-pacienteId="@ViewBag.PacienteId"
                   class="btn btn-details">Criar novo prontuário</a>
            }
            else
            {
                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-hover table-custom">
                        <thead class="text-center">
                            <tr>
                                <th>Data de Criação</th>
                                <th>Status</th>
                                <th>Observações</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prontuario in Model)
                            {
                                <tr>
                                    <td>@prontuario.CriadoEm.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@prontuario.Status</td>
                                    <td>@prontuario.Observacoes</td>
                                    <td class="text-center">
                                        <a asp-controller="Prontuario" asp-action="Details" asp-route-id="@prontuario.Id"
                                           class="btn btn-sm btn-details">Abrir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a asp-controller="Prontuario" asp-action="Create" asp-route-pacienteId="@ViewBag.PacienteId"
                       class="btn btn-details">Criar novo prontuário</a>
                </div>
            }
        </div>
    </div>
</div>