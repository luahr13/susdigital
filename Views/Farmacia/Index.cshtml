@model IEnumerable<projetoTP3_A2.Models.Farmacia>

@{
    ViewData["Title"] = "Farmácias Cadastradas";
}

<style>
    .titulo-verde {
        color: #14A091;
        font-weight: 600;
    }

        .titulo-verde:hover {
            color: #0F6E63;
        }

    .btn-edit {
        background-color: #A7CFFF;
        color: #0A3F7F;
        border: none;
    }

        .btn-edit:hover {
            background-color: #8AB2F0;
            color: #06306A;
        }

    .btn-details {
        background-color: #7FDAD1;
        color: #0F6E63;
        border: none;
    }

        .btn-details:hover {
            background-color: #5FCCBF;
            color: #0B504D;
        }

    .btn-delete {
        background-color: #F5A6A5;
        color: #A93A39;
        border: none;
    }

        .btn-delete:hover {
            background-color: #E98C8B;
            color: #7C2928;
        }

    .btn-nova-farmacia {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-nova-farmacia:hover {
            background-color: #118072;
            color: #fff;
        }

    .table-custom thead tr th {
        background-color: #A7E8DF !important;
        color: #0F6E63 !important;
    }

    .table-custom tbody tr td {
        background-color: #F9F9F9 !important;
        color: #333 !important;
    }

    .table-custom tbody tr:hover td {
        background-color: #E0F2F1 !important;
    }

    .btn-sm {
        border-radius: 0.3rem;
    }
</style>

<div class="container-fluid">
    <h2 class="titulo-verde mb-4">
        <i class="bi bi-building me-2"></i> Farmácias Cadastradas
    </h2>

    <!-- Mensagem de feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-sm btn-nova-farmacia">
            <i class="bi bi-plus-circle me-1"></i> Nova Farmácia
        </a>
    </div>

    <table class="table table-hover border rounded shadow-sm table-custom">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>
                        <i class="bi bi-geo-alt text-primary me-1"></i>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2 text-white">
                                <i class="bi bi-info-circle me-1"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash me-1"></i> Excluir
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>