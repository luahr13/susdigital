@model IEnumerable<projetoTP3_A2.Models.Farmacia>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout"; // usa o layout padrão
}

<div class="row">
    <!-- Coluna do menu lateral -->
    <div class="col-md-2">
        <partial name="_Sidebar" />
    </div>

    <!-- Coluna do conteúdo principal -->
    <h2 class="text-primary mb-4">💊 Farmácias Cadastradas</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-sm btn-outline-success">
            ➕ Nova Farmácia
        </a>
    </div>

    <table class="table table-striped table-hover border rounded shadow-sm">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">🔍 Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️ Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>