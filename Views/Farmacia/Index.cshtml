@model IEnumerable<projetoTP3_A2.Models.Farmacia>

@{
    ViewData["Title"] = "Index";
}

<style>
    .titulo-verde {
        color: #14A091;
        font-weight: 600;
    }

        .titulo-verde:hover {
            color: #0F6E63;
        }

    .btn-edit {
        background-color: #A7CFFF;
        color: #0A3F7F;
        border: none;
    }

        .btn-edit:hover {
            background-color: #8AB2F0;
            color: #06306A;
        }

    .btn-details {
        background-color: #7FDAD1;
        color: #0F6E63;
        border: none;
    }

        .btn-details:hover {
            background-color: #5FCCBF;
            color: #0B504D;
        }

    .btn-delete {
        background-color: #F5A6A5;
        color: #A93A39;
        border: none;
    }

        .btn-delete:hover {
            background-color: #E98C8B;
            color: #7C2928;
        }

    /* ✅ Botão Nova Farmácia (verde do sistema) */
    .btn-nova-farmacia {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-nova-farmacia:hover {
            background-color: #118072;
            color: #fff;
        }

    .table-custom thead tr th {
        background-color: #A7E8DF !important;
        color: #0F6E63 !important;
    }

    .table-custom tbody tr td {
        background-color: #F9F9F9 !important;
        color: #333 !important;
    }

    .table-custom tbody tr:hover td {
        background-color: #E0F2F1 !important;
    }

    .btn-sm {
        border-radius: 0.3rem;
    }
</style>

<div class="container-fluid">
    <!-- Coluna do conteúdo principal -->
    <h2 style="color:#14A091;" class="mb-4">Farmácias Cadastradas</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-sm btn-nova-farmacia">
            Nova Farmácia
        </a>
    </div>

    <table class="table table-hover border rounded shadow-sm table-custom">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-edit me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-details me-1">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-delete">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>