@model IEnumerable<projetoTP3_A2.Models.Farmacia>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout"; // usa o layout padrão
}

<style>
    /* Título da página em verde da paleta */
    .titulo-verde {
        color: #14A091; /* verde principal do menu */
        font-weight: 600;
    }

        .titulo-verde:hover {
            color: #0F6E63; /* verde mais escuro ao passar o mouse */
        }

    /* Botão Editar (azul suave) */
    .btn-edit {
        background-color: #A7CFFF; /* azul pastel */
        color: #0A3F7F;
        border: none;
    }

        .btn-edit:hover {
            background-color: #8AB2F0;
            color: #06306A;
        }

    /* Botão Detalhes (verde suave) */
    .btn-details {
        background-color: #7FDAD1; /* verde pastel */
        color: #0F6E63;
        border: none;
    }

        .btn-details:hover {
            background-color: #5FCCBF;
            color: #0B504D;
        }

    /* Botão Excluir (vermelho suave) */
    .btn-delete {
        background-color: #F5A6A5; /* vermelho pastel */
        color: #A93A39;
        border: none;
    }

        .btn-delete:hover {
            background-color: #E98C8B;
            color: #7C2928;
        }

    /* Botão Novo Medicamento (verde do menu) */
    .btn-novo-medicamento {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-novo-medicamento:hover {
            background-color: #118072;
            color: #fff;
        }

    /* Cabeçalho da tabela em verde claro */
    .table-custom thead tr th {
        background-color: #A7E8DF !important; /* verde claro */
        color: #0F6E63 !important; /* verde escuro para contraste */
    }

    /* Corpo da tabela branco suave */
    .table-custom tbody tr td {
        background-color: #F9F9F9 !important;
        color: #333 !important;
    }

    /* Hover suave nas linhas da tabela */
    .table-custom tbody tr:hover td {
        background-color: #E0F2F1 !important; /* verde bem suave */
    }

    /* Bordas arredondadas para os botões */
    .btn-sm {
        border-radius: 0.3rem;
    }
</style>
<div class="container-fluid">
    <!-- Coluna do menu lateral -->
    <div class="col-md-2">
        <partial name="_Sidebar" />
    </div>

    <!-- Coluna do conteúdo principal -->
    <h2 style="color:#14A091;" class="mb-4">Farmácias Cadastradas</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-sm btn-nova-farmacia">
            Nova Farmácia
        </a>
    </div>

    <table class="table table-hover border rounded shadow-sm table-custom">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-edit me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-details me-1">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-delete">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>