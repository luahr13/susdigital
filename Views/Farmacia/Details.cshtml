@model projetoTP3_A2.Models.Farmacia

@{
    ViewData["Title"] = "Detalhes da Farmácia";
}

<div class="row">
    <!-- Coluna do menu lateral -->
    <div class="col-md-2">
        <partial name="_Sidebar" />
    </div>

    <!-- Coluna do conteúdo principal -->
    <div class="col-md-10">
        <h2 class="text-primary mb-4">🔍 Detalhes da Farmácia</h2>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">🏥 Nome</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">📍 Endereço</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                ⬅️ Voltar
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                ✏️ Editar
            </a>
        </div>
    </div>
</div>