@model projetoTP3_A2.Models.Farmacia

@{
    ViewData["Title"] = "Detalhes da Farmácia";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <h2 class="mb-4 text-success fw-bold">
                <i class="bi bi-building me-2"></i> @ViewData["Title"]
            </h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted">Nome</dt>
                        <dd class="col-sm-9">
                            <span class="fw-bold">@Html.DisplayFor(model => model.Nome)</span>
                        </dd>

                        <dt class="col-sm-3 text-muted">Endereço</dt>
                        <dd class="col-sm-9">
                            <i class="bi bi-geo-alt text-primary me-1"></i>
                            @Html.DisplayFor(model => model.Endereco)
                        </dd>
                    </dl>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square me-1"></i> Editar
                        </a>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>