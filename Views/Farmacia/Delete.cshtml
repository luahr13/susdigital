@model projetoTP3_A2.Models.Farmacia

@{
    ViewData["Title"] = "Excluir Farmácia";
}

<div class="row">
    <!-- Coluna do menu lateral -->
    <div class="col-md-2">
        <partial name="_Sidebar" />
    </div>

    <!-- Coluna do conteúdo principal -->
    <div class="col-md-10">
        <h2 class="text-danger mb-4">🗑️ Excluir Farmácia</h2>

        <h5 class="mb-3">Tem certeza que deseja excluir este registro?</h5>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">🏥 Nome</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">📍 Endereço</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ⬅️ Voltar
                </a>
                <button type="submit" class="btn btn-danger">
                    🗑️ Confirmar Exclusão
                </button>
            </div>
        </form>
    </div>
</div>