@{
    ViewData["Title"] = "Área do Farmacêutico";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">
        <i class="bi bi-capsule me-2"></i> @ViewData["Title"]
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-controller="Farmaceutico" asp-action="BuscarPrescricao" method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="codigo" class="form-control" placeholder="Digite o código da prescrição" required />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-1"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>