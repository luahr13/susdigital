@{
    ViewData["Title"] = "Área do Paciente";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .card-custom {
        border: none;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        transition: transform 0.2s ease;
        height: 100%;
    }

        .card-custom:hover {
            transform: scale(1.02);
        }

    .card-icon {
        font-size: 2rem;
        color: #14A091;
    }

    .btn-card {
        background-color: #14A091;
        color: #fff;
        border: none;
        font-size: 0.9rem;
        padding: 6px 12px;
    }

        .btn-card:hover {
            background-color: #118072;
            color: #fff;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h2 class="mb-4 text-uppercase fw-bold" style="color:#14A091;">Área do Paciente</h2>

            <div class="row g-3">
                <!-- Card: Prontuários Abertos -->
                <div class="col-md-6">
                    <div class="card card-custom p-3 d-flex flex-column justify-content-between">
                        <div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-folder-plus card-icon me-2"></i>
                                <h6 class="mb-0 fw-bold">Prontuários Abertos</h6>
                            </div>
                            <p class="mb-2 small">Visualize seus prontuários em andamento.</p>
                        </div>
                        <div>
                            <form method="get" action="/Prontuario/IndexPaciente">
                                <input type="hidden" name="status" value="Aberto" />
                                <button type="submit" class="btn btn-card">Ver abertos</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Card: Prontuários com Exame Recebido -->
                <div class="col-md-6">
                    <div class="card card-custom p-3 d-flex flex-column justify-content-between">
                        <div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-file-earmark-medical card-icon me-2"></i>
                                <h6 class="mb-0 fw-bold">Exames Recebidos</h6>
                            </div>
                            <p class="mb-2 small">Consulte prontuários que já possuem exames enviados.</p>
                        </div>
                        <div>
                            <form method="get" action="/Prontuario/IndexPaciente">
                                <input type="hidden" name="status" value="ExameRecebido" />
                                <button type="submit" class="btn btn-card">Ver exames recebidos</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>