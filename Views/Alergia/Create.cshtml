@model projetoTP3_A2.Models.Alergia

@{
    ViewData["Title"] = "Nova Alergia";
}

<div class="container-fluid">
    <div class="row">
        <!-- Conteúdo principal -->
        <div class="col-md-10">
            <h2 class="mb-4" style="color:#14A091;">Nova Alergia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome da Alergia</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Reação -->
                        <div class="mb-3">
                            <label asp-for="Reacao" class="form-label">Reação</label>
                            <input asp-for="Reacao" class="form-control" />
                            <span asp-validation-for="Reacao" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Voltar
                            </a>

                            <button type="submit" class="btn" style="background-color:#14A091;color:white;">
                                Salvar
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
