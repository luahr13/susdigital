@model projetoTP3_A2.Models.Alergia

@{
    ViewData["Title"] = "Editar Alergia";
}

<style>
    .titulo-verde {
        color: #14A091;
        font-weight: 600;
    }

    .btn-salvar {
        background-color: #14A091;
        color: #fff;
        border: none;
    }

        .btn-salvar:hover {
            background-color: #118072;
            color: #fff;
        }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Conteúdo principal -->
        <div class="col-md-10">
            <h2 class="mb-4 titulo-verde">Editar Alergia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome da Alergia</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Reação -->
                        <div class="mb-3">
                            <label asp-for="Reacao" class="form-label">Reação</label>
                            <input asp-for="Reacao" class="form-control" />
                            <span asp-validation-for="Reacao" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                            <button type="submit" class="btn btn-salvar">Salvar</button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
