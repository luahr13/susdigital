@model projetoTP3_A2.Models.Patologia

@{
    ViewData["Title"] = "Editar Patologia";
}

<div class="container-fluid">
    <div class="row">
        <!-- Conteúdo principal -->
        <div class="col-md-10">
            <h2 class="mb-4" style="color:#14A091;">Editar Patologia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <!-- Nome -->
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome da Patologia</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Descrição -->
                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                            <button type="submit" class="btn" style="background-color:#14A091;color:white;">Salvar</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
