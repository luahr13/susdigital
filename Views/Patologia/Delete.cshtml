@model projetoTP3_A2.Models.Patologia

@{
    ViewData["Title"] = "Excluir Patologia";
}

<div class="container-fluid">
    <div class="row">
        <!-- Conteúdo principal -->
        <div class="col-md-10">
            <h2 class="mb-4" style="color:#6c757d;">Excluir Patologia</h2>

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <h4 class="mb-3" style="color:#6c757d;">
                        Tem certeza que deseja excluir esta patologia?
                    </h4>

                    <dl class="row">

                        <dt class="col-sm-3 text-muted">Nome</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-3 text-muted">Descrição</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                        </div>
                    </form>

                </div>
            </div>

        </div>

    </div>
</div>
