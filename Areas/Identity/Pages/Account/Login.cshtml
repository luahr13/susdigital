@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Lado esquerdo: formulário -->
        <div class="col-md-6 d-flex align-items-center">
            <div class="w-100">
                <h2 class="text-center mb-4">BEM VINDO</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Digite seu email" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Senha" />
                        <label asp-for="Input.Password">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-success w-100 mb-2">Entrar</button>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <button type="submit" class="btn btn-outline-light w-100 border mb-3" name="provider" value="Google">
                                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" style="height:20px; margin-right:8px;" />
                                Entrar com Google
                            </button>
                        </form>
                    }

                    <p class="text-center mt-3">
                        Não tem uma conta?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-danger fw-bold">Cadastre-se gratuitamente!</a>
                    </p>

                    <p class="text-center">
                        <a asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                    </p>
                </form>
            </div>
        </div>

        <!-- Lado direito: imagem -->
        <div class="col-md-6 d-none d-md-block">
            <img src="/images/medico-login.jpg" alt="Profissional da saúde" class="img-fluid rounded shadow" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}