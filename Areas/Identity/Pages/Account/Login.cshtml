@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - projetoTP3_A2</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            font-family: 'Segoe UI', sans-serif;
            background-color: #E7FDFB; /* fundo geral */
        }

        .login-wrapper {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        .login-form {
            flex: 1;
            background-color: #E7FDFB; /* fundo do formulário */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

            .login-form h2 {
                margin-bottom: 1.5rem;
                color: #14A091; /* título */
            }

            .login-form form {
                width: 100%;
                max-width: 400px;
            }

            .login-form .form-control {
                background-color: #E7FDFB;
                border: 1px solid #14A091;
                color: #14A091;
                margin-bottom: 1rem;
                padding: 0.75rem;
                border-radius: 4px;
            }

            .login-form .form-check-input {
                border-color: #14A091;
            }

            .login-form .form-check-label {
                color: #14A091;
            }

            .login-form .btn-login {
                background-color: #14A091;
                color: white;
                width: 100%;
                padding: 0.75rem;
                border: none;
                border-radius: 4px;
                font-weight: bold;
                margin-bottom: 0.5rem;
            }

            .login-form .google-btn {
                background-color: white;
                border: 1px solid #14A091;
                color: #14A091;
                width: 100%;
                padding: 0.75rem;
                border-radius: 4px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
            }

                .login-form .google-btn img {
                    height: 20px;
                    margin-right: 8px;
                }

            .login-form .footer-text {
                margin-top: 1rem;
                font-size: 0.9rem;
                color: #14A091;
                text-align: center;
            }

                .login-form .footer-text a {
                    color: red;
                    text-decoration: none;
                    font-weight: bold;
                }

        .login-image {
            position: relative;
            flex: 1;
            background-image: url("/images/medico.png");
            background-size: cover;
            background-position: center;
        }

            .login-image::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(89, 190, 175, 0.8); /* filtro #59BEAF com 80% opacidade */
            }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-form">
            <h2>BEM VINDO</h2>
            <form method="post">
                <input asp-for="Input.Email" class="form-control" placeholder="Digite seu email" />
                <input asp-for="Input.Password" class="form-control" placeholder="••••••••" type="password" />
                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Lembrar de mim</label>
                </div>
                <button type="submit" class="btn-login">Entrar</button>
                <button type="button" class="google-btn btn d-flex align-items-center justify-content-center">
                    <img src="/images/google.png" alt="Google" />
                    Entrar com Google
                </button>
                <div class="footer-text">
                    Não tem uma conta? <a asp-page="./Register">Cadastre-se gratuitamente!</a>
                </div>
            </form>
        </div>
        <div class="login-image"></div>
    </div>
</body>
</html>