}

<style>
    body {
        background-color: #E7FDFB;
        margin: 0;
        padding: 0;
    }

    .login-wrapper {
        display: flex;
        flex-direction: row;
        height: 100vh;
        overflow: hidden;
    }

    .form-side {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .form-content {
        width: 100%;
        max-width: 400px;
    }

    .form-floating .form-control {
        border: 1px solid #15A090;
    }

    .btn-primary {
        background-color: #15A090;
        border-color: #15A090;
    }

    h2, label, a {
        color: #15A090;
    }

    .image-side {
        flex: 1;
        background-image: url('/images/medico.png');
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(89, 190, 175, 0.8);
    }
</style>

<div class="login-wrapper">
    <div class="form-side">
        <div class="form-content">
            <form id="account" method="post">
                <h2 class="text-center mb-4">Bem-vindo</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Digite seu email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Digite sua senha" />
                    <label asp-for="Input.Password">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>

                <div class="mt-3">
                    <p><a asp-page="./ForgotPassword">Esqueceu sua senha?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastre-se</a></p>
                    <p><a asp-page="./ResendEmailConfirmation">Reenviar confirmação de email</a></p>
                </div>
            </form>
        </div>
    </div>

    <div class="image-side">
        <div class="image-overlay"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}