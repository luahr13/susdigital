@using System.Security.Claims
@{
    string perfil = User.FindFirst("Perfil")?.Value;
    string logoController = "Home";
    string logoAction = "Index";

    switch (perfil)
    {
        case "Administrador":
            logoController = "Home";
            logoAction = "Index";
            break;

        case "Medico":
            logoController = "Home";
            logoAction = "MedicoHome";
            break;

        case "Farmaceutico":
            logoController = "Home";
            logoAction = "FarmaceuticoHome";
            break;

        case "Paciente":
            logoController = "Home";
            logoAction = "PacienteHome";
            break;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projetoTP3_A2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projetoTP3_A2.styles.css" asp-append-version="true" />
</head>
<body>
    <style>
        .custom-navbar {
            background-color: #E7FDFB !important;
        }

            .custom-navbar .nav-link,
            .custom-navbar .navbar-brand,
            .custom-navbar .navbar-toggler-icon {
                color: #273240 !important; /* mesma cor dos textos/ícones do sidebar */
            }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 custom-navbar">
            <div class="container">
                <a class="navbar-brand" asp-controller="@logoController" asp-action="@logoAction">
                    <img src="~/images/logo.png" alt="Logo" style="height:40px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav me-auto">
                        <!-- Links adicionais podem ser adicionados aqui -->
                    </ul>

                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - projetoTP3_A2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>